# ============================================
# BotBot v2 Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# All secrets should be loaded from environment variables

# ============================================
# REQUIRED - Discord Configuration
# ============================================
# Your Discord bot token from the Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord application client ID
CLIENT_ID=your_discord_client_id_here

# ============================================
# OPTIONAL - Slack Configuration (Future)
# ============================================
# Slack Bot Token (xoxb-...)
# SLACK_TOKEN=xoxb-your-slack-bot-token

# Slack App-Level Token for Socket Mode (xapp-...)
# SLACK_APP_TOKEN=xapp-your-slack-app-token

# ============================================
# OPTIONAL - LLM Configuration
# ============================================
# OpenAI API Key for LLM features (uses mock if not set)
# OPENAI_API_KEY=sk-your-openai-api-key

# LLM Provider to use: 'openai' or 'mock'
# LLM_PROVIDER=openai

# ============================================
# OPTIONAL - Vector Memory Configuration
# ============================================
# Path to vector store file for semantic memory
# VECTOR_STORE_PATH=./data/memory.jsonl

# ============================================
# OPTIONAL - Database Configuration
# ============================================
# Path to SQLite database file
# DB_PATH=./data/botbot.db

# Path to database backup directory
# DB_BACKUP_DIR=./backups

# Path to data directory
# DATA_DIR=./data

# ============================================
# OPTIONAL - Application Configuration
# ============================================
# Environment: development, production, or test
NODE_ENV=development

# HTTP port for web interface
PORT=3000

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# Log file name
# LOG_FILE=botbot.log

# ============================================
# OPTIONAL - Rate Limiting
# ============================================
# Rate limit window in milliseconds (default: 60000 = 1 minute)
# RATE_LIMIT_WINDOW=60000

# Maximum requests per window (default: 10)
# RATE_LIMIT_MAX=10

# ============================================
# OPTIONAL - Feature Flags
# ============================================
# Enable/disable features (set to 'false' to disable)
# FEATURE_GAMES=true
# FEATURE_REMINDERS=true
# FEATURE_STANDUPS=true
# FEATURE_RETROS=true

# ============================================
# OPTIONAL - Game Settings
# ============================================
# Game cooldown in milliseconds (default: 3600000 = 1 hour)
# GAME_COOLDOWN=3600000

# Maximum players per game (default: 10)
# MAX_GAME_PLAYERS=10

# ============================================
# OPTIONAL - Owner Configuration
# ============================================
# Comma-separated list of Discord user IDs with owner privileges
# OWNER_IDS=123456789,987654321
