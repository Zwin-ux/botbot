{
  "name": "botbot",
  "version": "1.0.0",
  "description": "A natural language Discord bot for team collaboration and games",
  "main": "src/index.js",
  "type": "module",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/basic.test.js",
      "**/test/nlp.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch)/)"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 5000,
    "detectOpenHandles": true,
    "forceExit": true,
    "maxWorkers": 1,
    "runInBand": true
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run lint && npm run test:ci",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --watchAll=false --ci",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "is-ci || husky install",
    "db:migrate": "node scripts/migrate-safe.js",
    "db:rollback": "node src/scripts/migrate.js --rollback",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:railway": "railway up",
    "health-check": "node scripts/health-check.js",
    "setup:db": "npm run db:migrate"
  },
  "keywords": [
    "discord",
    "bot",
    "productivity",
    "games",
    "natural-language"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@discordjs/builders": "^1.6.3",
    "@discordjs/rest": "^1.7.0",
    "date-fns": "^3.6.0",
    "debug": "^4.4.1",
    "discord-api-types": "^0.37.60",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "franc": "^5.0.0",
    "is-ci": "^4.1.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.2.3",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "chai": "^5.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "sqlite": "^5.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.17.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
