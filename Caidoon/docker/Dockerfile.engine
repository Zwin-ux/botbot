# Dockerfile for Encounters Engine Service
FROM node:20-alpine as base

# Install pnpm globally
RUN npm install -g pnpm@10

# Install common system dependencies
RUN apk add --no-cache curl

WORKDIR /app

# Copy workspace configuration
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY tsconfig.base.json ./

# Copy all package.json files for dependency resolution
COPY packages/core/package.json ./packages/core/
COPY packages/validators/package.json ./packages/validators/
COPY packages/sdk/package.json ./packages/sdk/
COPY packages/llm-proxy/package.json ./packages/llm-proxy/
COPY services/engine/package.json ./services/engine/

# Copy tsconfig.json files so composite builds work
COPY packages/core/tsconfig.json ./packages/core/
COPY packages/validators/tsconfig.json ./packages/validators/
COPY packages/sdk/tsconfig.json ./packages/sdk/
COPY packages/llm-proxy/tsconfig.json ./packages/llm-proxy/
COPY services/engine/tsconfig.json ./services/engine/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code
COPY packages/core ./packages/core
COPY packages/validators ./packages/validators
COPY packages/sdk ./packages/sdk
COPY packages/llm-proxy ./packages/llm-proxy
COPY services/engine ./services/engine

# Build packages (build dependencies in order)
RUN pnpm --filter @ai-encounters/engine... build

# Verify TypeScript declaration files were generated
RUN echo "Verifying build artifacts..." && \
    test -f packages/core/dist/index.d.ts || (echo "ERROR: Core declaration files not generated" && exit 1) && \
    test -f packages/validators/dist/index.d.ts || (echo "ERROR: Validators declaration files not generated" && exit 1) && \
    test -f packages/sdk/dist/index.d.ts || (echo "ERROR: SDK declaration files not generated" && exit 1) && \
    test -f services/engine/dist/index.js || (echo "ERROR: Engine build failed" && exit 1) && \
    echo "Build verification successful!"

# Create data directory
RUN mkdir -p /app/data

# Expose port
EXPOSE 8786

# Set working directory to engine
WORKDIR /app/services/engine

# Start the service
CMD ["node", "dist/index.js"]
